<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .cursor {
        cursor: pointer;
        padding: 10px;
        }
		
        .boxNews {
        background-color: #F0F0F0;
        border-top: 1px solid rgba(0, 0, 0, .4);
        }
		


    </ui:style>
    <!-- <g:VerticalPanel> -->
    <g:DockLayoutPanel width="400px" height="300px" unit="PX" >
        <g:north size="50">
            <g:DockLayoutPanel unit="PX">
                <g:west size="200">
                    <g:VerticalPanel verticalAlignment="ALIGN_MIDDLE"
                                                         horizontalAlignment="ALIGN_LEFT" width="100%" height="100%">
                        <g:VerticalPanel verticalAlignment="ALIGN_MIDDLE"
                                                                 horizontalAlignment="ALIGN_RIGHT" styleName="{style.cursor}">
                            <g:Hyperlink ui:field="indietroLabel" styleName="{style.cursor}">Indietro</g:Hyperlink>
                        </g:VerticalPanel>
                    </g:VerticalPanel>
                </g:west>
                <g:east size="200">
                    <g:VerticalPanel verticalAlignment="ALIGN_MIDDLE"
                                                         horizontalAlignment="ALIGN_RIGHT" width="100%" height="100%">
                        <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE"
                                                                   horizontalAlignment="ALIGN_RIGHT">
                            <g:Hyperlink ui:field="nuoveLabel" styleName="{style.cursor}">Nuove</g:Hyperlink>
                            <g:Label>|</g:Label>
                            <g:Hyperlink ui:field="vecchieLabel" styleName="{style.cursor}">Vecchie</g:Hyperlink>
                        </g:HorizontalPanel>
                        <!-- <g:VerticalPanel verticalAlignment="ALIGN_MIDDLE" -->
                        <!-- horizontalAlignment="ALIGN_RIGHT" styleName="{style.cursor}"> -->
                        <!-- <g:Hyperlink text="New Hyperlink" targetHistoryToken="newHistoryToken"/> -->
                        <!-- <g:Hyperlink ui:field="vecchieLabel" styleName="{style.cursor}">Vecchie</g:Hyperlink> -->

                        <!-- </g:VerticalPanel> -->
                    </g:VerticalPanel>
                </g:east>
            </g:DockLayoutPanel>
        </g:north>
        <g:center>
            <g:VerticalPanel ui:field="centerPanel" styleName="{style.boxNews}"></g:VerticalPanel>
        </g:center>
    </g:DockLayoutPanel>
    <!-- 	</g:VerticalPanel> -->
</ui:UiBinder> 