<config
        xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
        xmlns='http://www.ehcache.org/v3'
        xsi:schemaLocation="
            http://www.ehcache.org/v3
            http://www.ehcache.org/schema/ehcache-core-3.10.xsd">

    <!-- Persistent cache directory-->
    <persistence directory="./target/GeoPlatformCache" />

    <thread-pools>
        <thread-pool alias="defaultDiskPool" min-size="1" max-size="30"/>
        <thread-pool alias="defaultWriteBehindPool" min-size="1" max-size="3"/>
        <thread-pool alias="defaultEventPool" min-size="1" max-size="10"/>
        <thread-pool alias="cache2Pool" min-size="1" max-size="20"/>
    </thread-pools>

    <event-dispatch thread-pool="defaultEventPool"/>
    <write-behind thread-pool="defaultWriteBehindPool"/>
    <disk-store thread-pool="defaultDiskPool"/>

    <cache-template name="default-cache">
        <expiry>
            <ttl>120</ttl>
        </expiry>
        <resources>
            <heap>100</heap>
            <offheap unit="MB">10</offheap>
            <disk persistent="true" unit="MB">150</disk>
        </resources>
    </cache-template>

    <cache alias="account">
        <expiry>
            <ttl>240</ttl>
        </expiry>

        <listeners>
            <listener>
                <class>org.geosdi.geoplatform.persistence.configuration.cache.listener.GPCacheEventListener</class>
                <event-firing-mode>ASYNCHRONOUS</event-firing-mode>
                <event-ordering-mode>UNORDERED</event-ordering-mode>
                <events-to-fire-on>CREATED</events-to-fire-on>
                <events-to-fire-on>EXPIRED</events-to-fire-on>
                <events-to-fire-on>EVICTED</events-to-fire-on>
            </listener>
        </listeners>

        <resources>
            <offheap unit="MB">100</offheap>
            <heap unit="MB">10</heap>
            <disk persistent="true" unit="MB">200</disk>
        </resources>
        <disk-store-settings thread-pool="cache2Pool" writer-concurrency="2"/>
    </cache>

