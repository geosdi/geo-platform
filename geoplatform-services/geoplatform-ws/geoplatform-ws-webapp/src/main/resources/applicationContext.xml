    </bean>-->

    <!-- ====================================================================-->
    <!-- Service endpoints -->
    <!-- ====================================================================-->

    <jaxws:endpoint id="geoplatformServiceSOAP"
    	implementorClass="org.geosdi.geoplatform.services.GeoPlatformServiceImpl"
    	implementor="#geoPlatformService"
    	address="/soap">

        <jaxws:serviceFactory>
            <bean class="org.apache.cxf.jaxws.support.JaxWsServiceFactoryBean">
                <property name="serviceConfigurations">
                    <list>
                        <bean class="org.apache.cxf.jaxws.support.JaxWsServiceConfiguration"/>
                        <bean class="org.apache.cxf.service.factory.DefaultServiceConfiguration"/>
                    </list>
                </property>
            </bean>
        </jaxws:serviceFactory>
        <jaxws:inInterceptors>
            <ref bean="geoPlatformServerLoggingInInterceptorBean"/>
            <ref bean="geoPlatformServerSecurityInInterceptorBean"/>
        </jaxws:inInterceptors>        
        <jaxws:outInterceptors>
            <ref bean="geoPlatformServerLoggingOutInterceptorBean"/>
            <ref bean="geoPlatformServerSecurityOutInterceptorBean"/>
        </jaxws:outInterceptors>
    </jaxws:endpoint>

    <jaxws:endpoint id="publisherServiceSOAP"
    	implementorClass="org.geosdi.geoplatform.services.GPPublisherServiceImpl"
    	implementor="#publisherService"
    	address="/publish">
        <jaxws:serviceFactory>
            <bean class="org.apache.cxf.jaxws.support.JaxWsServiceFactoryBean">
                <property name="serviceConfigurations">
                    <list>
                        <bean class="org.apache.cxf.jaxws.support.JaxWsServiceConfiguration"/>
                        <bean class="org.apache.cxf.service.factory.DefaultServiceConfiguration"/>
                    </list>
                </property>
            </bean>
        </jaxws:serviceFactory >
        <!--<jaxws:outInterceptors>
            <bean class="org.apache.cxf.binding.soap.saaj.SAAJOutInterceptor"/>
            <ref bean="TimestampSignEncrypt_Response"/>
        </jaxws:outInterceptors>
        <jaxws:inInterceptors>
            <ref bean="TimestampSignEncrypt_Request"/>
            <bean class="org.apache.cxf.binding.soap.saaj.SAAJInInterceptor"/>
        </jaxws:inInterceptors>-->
    </jaxws:endpoint>
    
    <jaxws:endpoint id="schedulerServiceSOAP"
    	implementorClass="org.geosdi.geoplatform.services.GPSchedulerServiceImpl"
    	implementor="#schedulerService"
    	address="/scheduler">

        <jaxws:serviceFactory>
            <bean class="org.apache.cxf.jaxws.support.JaxWsServiceFactoryBean">
                <property name="serviceConfigurations">
                    <list>
                        <bean class="org.apache.cxf.jaxws.support.JaxWsServiceConfiguration"/>
                        <bean class="org.apache.cxf.service.factory.DefaultServiceConfiguration"/>
                    </list>
                </property>
            </bean>
        </jaxws:serviceFactory>
        <jaxws:inInterceptors>
            <ref bean="geoPlatformServerLoggingInInterceptorBean"/>
            <ref bean="geoPlatformServerSecurityInInterceptorBean"/>
        </jaxws:inInterceptors>        
        <jaxws:outInterceptors>
            <ref bean="geoPlatformServerLoggingOutInterceptorBean"/>
            <ref bean="geoPlatformServerSecurityOutInterceptorBean"/>
        </jaxws:outInterceptors>
    </jaxws:endpoint>

